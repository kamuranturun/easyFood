<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyFood" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. status bar rengini beyaz yapalım -->
        <item name="android:statusBarColor">@color/white</item>
        <!--status barın üstündeki saat tarih vs görünür yapalım windowLightStatusBar ile-->
        <item name="android:windowLightStatusBar" >true</item>
        <!-- Customize your theme here. -->
        <!-- 31 bottomsheet -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- 31 bottomsheet go back styles xml and runapp-->
    </style>
</resources>